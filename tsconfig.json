{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "lib": ["esnext"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "#utils/*": ["./app/utils/*.ts"],
      "#actions/*": ["./app/actions/*.ts"],
      "#rules/*": ["./app/rules/*.ts"],
      "#messages/*": ["./resources/messages/*.ts"],
      "#constants/*": ["./app/constants/*.ts"],
    }
  }
}
